  font pango: Arimo 7
  position top
  separator_symbol " / "
  status_command i3status -c ~/.config/i3/bar_config
  colors {
    separator #0043a8
    background #000000
    statusline #00A5ff
    
    focused_workspace #000000 #000000 #0066ff
    active_workspace #000000 #000000 #ffffff
    inactive_workspace #000000 #000000 #006060
    urgent_workspace #2f343a #900000 #ffffff
  }
}


